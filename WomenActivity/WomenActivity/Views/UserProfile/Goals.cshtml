@model IEnumerable<WomenActivity.Models.Goal>

@{
    ViewData["Title"] = "User Goals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/custom-goals.css" />

<div class="profile-container">
    <h2 class="profile-header"><i class="fas fa-bullseye"></i> Goals</h2>

    @if (Model.Any())
    {
        <div class="goals-grid">
            @foreach (var goal in Model)
            {
                <div class="goal-card">
                    <div class="goal-content">
                        <h5 class="goal-title">@goal.Title</h5>
                        <p class="goal-description">@goal.Description</p>
                    </div>
                    <div class="goal-actions">
                        <a asp-action="EditGoal" asp-route-id="@goal.Id" class="btn btn-outline"><i class="fas fa-edit"></i> Edit</a>
                        <a asp-action="DeleteGoal" asp-route-id="@goal.Id" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="no-goals-message">No goals set yet.</p>
    }

    <div class="d-flex justify-content-center my-4">
        <a asp-action="AddGoal" class="btn btn-primary btn-add-goal">
            <i class="fas fa-plus-circle"></i>
        </a>
    </div>

</div>
