@model IEnumerable<WomenActivity.Models.Book>

@{
    ViewData["Title"] = "User Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/custom-books.css" />

<div class="profile-container">
    <h2 class="profile-header"><i class="fas fa-book"></i> Books</h2>
    
    @if (Model.Any())
    {
        <div class="books-grid">
            @foreach (var book in Model)
            {
                <div class="book-card">
                    <div class="book-content">
                        <h5 class="book-title">@book.Title</h5>
                        <p class="book-author">Author: @book.Author</p>
                        <p class="book-status"><strong>Status:</strong> @(book.IsRead ? "Read" : "Unread")</p>
                    </div>
                    <div class="book-actions">
                        <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-outline"><i class="fas fa-edit"></i> Edit</a>
                        <a asp-action="DeleteBook" asp-route-id="@book.Id" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="no-books-message">No books added yet.</p>
    }

<div class="d-flex justify-content-center gap-4 my-4">
    <a asp-action="AddBook" class="btn btn-primary btn-action">
        <i class="fas fa-plus-circle"></i>
    </a>
</div>
</div>
