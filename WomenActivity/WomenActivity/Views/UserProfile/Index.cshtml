@model WomenActivity.Models.UserProfile

@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/custom-profile.css" />

<div class="profile-container">
    <h2 class="profile-header">
        <img src="@(Url.Content(ViewData["ProfilePhoto"]?.ToString() ?? "~/images/profiles/photo1.jpg"))"
             alt="User Icon" class="profile-icon" /> User Profile
    </h2>

    <!-- Profile Information Section -->
    <div class="profile-info">
        <p><strong>Username:</strong> <span>@Model.Username</span></p>
        <p><strong>Email:</strong> <span>@Model.Email</span></p>
        <p><strong>Age:</strong> <span>@Model.Age</span></p>
        <p><strong>Location:</strong> <span>@Model.Location</span></p>
    </div>

    <!-- Profile Sections with Icons -->
    <div class="profile-sections">
        <h3><i class="fas fa-bullseye"></i> Goals</h3>
        <a href="@Url.Action("Goals", "UserProfile")" class="btn btn-outline">View Goals</a>

        <h3><i class="fas fa-camera-retro"></i> Memories</h3>
        <a href="@Url.Action("Memories", "UserProfile")" class="btn btn-outline">View Memories</a>

        <h3><i class="fas fa-book"></i> Books to Read</h3>
        <a href="@Url.Action("Books", "UserProfile")" class="btn btn-outline">View Books to Read</a>
    </div>

    <!-- Edit Profile Button -->
    <div class="d-flex justify-content-center gap-4 my-4">
        <a href="@Url.Action("Edit", "UserProfile")" class="btn btn-primary"><i class="fas fa-edit"></i></a>
    </div>
    </div>
