@model WomenActivity.Models.Memory

@{
    ViewData["Title"] = "Edit Memory";
}
<link rel="stylesheet" href="~/css/profile-sections.css" />

<div class="edit-memory-container">
    <h2 class="header-title"><i class="fas fa-pen-square"></i> Edit Memory</h2>

    <form asp-action="EditMemory" method="post" class="edit-form">
        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

        <!-- Hidden field for Memory ID -->
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title" class="form-label"><i class="fas fa-font"></i> Title</label>
            <input asp-for="Title" class="form-control form-input" />
            <span asp-validation-for="Title" class="text-danger validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label"><i class="fas fa-align-left"></i> Description</label>
            <textarea asp-for="Description" class="form-control form-textarea"></textarea>
            <span asp-validation-for="Description" class="text-danger validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Date" class="form-label"><i class="fas fa-calendar-day"></i> Date</label>
            <input asp-for="Date" class="form-control form-input" type="date" />
            <span asp-validation-for="Date" class="text-danger validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl" class="form-label"><i class="fas fa-image"></i> Image URL</label>
            <input asp-for="ImageUrl" class="form-control form-input" />
            <span asp-validation-for="ImageUrl" class="text-danger validation-message"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-save"><i class="fas fa-save"></i> Save</button>
            <a asp-action="Memories" class="btn btn-cancel"><i class="fas fa-times-circle"></i> Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<style>

    .edit-memory-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .header-title {
        display: flex;
        align-items: center;
        font-size: 24px;
        color: #3c4043;
        margin-bottom: 20px;
        justify-content: center;
    }

        .header-title i {
            margin-right: 10px;
        }

    .edit-form .form-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 14px;
        color: #5f6368;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .form-label i {
            margin-right: 8px;
            color: #556cd6;
        }

    .form-control {
        width: 100%;
        background-color: #f1f3f4;
        border-radius: 6px;
        padding: 10px;
        border: 1px solid #dadce0;
        transition: border-color 0.3s;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-save, .btn-cancel {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px 20px;
        font-weight: 500;
        border-radius: 8px;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-save {
        background-color: #556cd6;
        color: white;
    }

    .btn-cancel {
        background-color: #ea4335;
        color: white;
    }

    .btn-save:hover {
        background-color: #4054b2;
    }

    .btn-cancel:hover {
        background-color: #d73a31;
    }


</style>