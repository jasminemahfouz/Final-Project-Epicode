@model WomenActivity.Models.Book

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/profile-sections.css" />
<h2 class="text-center text-danger mb-4">Delete Book</h2>

<p>Are you sure you want to delete this book?</p>
<div class="mb-4">
    <h4>@Model.Title</h4>
    <p>Author: @Model.Author</p>
</div>

<form asp-action="DeleteBook" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Books" class="btn btn-secondary">Cancel</a>
    </div>
</form>
