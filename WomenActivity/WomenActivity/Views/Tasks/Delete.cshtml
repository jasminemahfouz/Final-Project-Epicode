@model WomenActivity.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<link rel="stylesheet" href="~/css/edittask.css" />

<div class="delete-task-container">
    <header class="delete-task-header">
        <h2><i class="fas fa-trash-alt"></i> Delete Task</h2>
    </header>

    <p class="delete-warning">Are you sure you want to delete this task?</p>

    <div class="task-details">
        <h4>@Model.Name</h4>
        <p>@Model.Description</p>
        <p><strong>Time:</strong> @Model.Time.ToString("g")</p>
        <p><strong>Color:</strong> @Model.Color</p>
        <p><strong>Type:</strong> @Model.Type</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="delete-form">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </form>
</div>
