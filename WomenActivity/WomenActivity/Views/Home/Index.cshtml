@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/home.css" />

<!-- Welcome Section -->
<div class="welcome-banner text-center py-5">
    <h1 class="display-4">Welcome to WomenActivity</h1>
    <p class="lead text-muted">
        Simplify your daily life with tools for routines, tasks, wellness, and cycle tracking.
    </p>
</div>

<!-- Features Section -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-card shadow-sm p-4 rounded">
                <i class="fas fa-list-alt fa-3x text-primary mb-3"></i>
                <h3 class="h5">Daily Routines</h3>
                <p>Create and manage your daily routines effortlessly to stay on track.</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-card shadow-sm p-4 rounded">
                <i class="fas fa-calendar-check fa-3x text-primary mb-3"></i>
                <h3 class="h5">Task Calendar</h3>
                <p>Plan and visualize your tasks with a simple, intuitive calendar.</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-card shadow-sm p-4 rounded">
                <i class="fas fa-heartbeat fa-3x text-primary mb-3"></i>
                <h3 class="h5">Cycle Tracker</h3>
                <p>Track your cycle with ease, keeping everything organized and accessible.</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-card shadow-sm p-4 rounded">
                <i class="fas fa-smile fa-3x text-primary mb-3"></i>
                <h3 class="h5">Daily Wellness</h3>
                <p>Monitor your mood, energy levels, and personal notes in one place.</p>
            </div>
        </div>
    </div>
</div>

<!-- Simplicity Section -->
<div class="container text-center py-5 bg-light rounded">
    <h2 class="h4 text-primary mb-4">Designed for All Ages</h2>
    <p class="lead text-muted">
        WomenActivity is built with simplicity in mind, making it intuitive and accessible for everyone.
        Whether you're a busy professional, a student, or just looking to organize your day, our tools
        are here to help you focus on what matters.
    </p>
</div>



@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="~/js/slider.js"></script>
}
